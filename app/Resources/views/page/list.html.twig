{% extends 'base.html.twig' %}

{% block body %}
	<h2>pages</h2>
	<a href="page/create" class="btn btn-default">Add Page</a>
	<table class="table table-hover">
	    <thead>
	      <tr>
	        <th>Title</th>
	        <th>url</th>
	      </tr>
	    </thead>
	    <tbody>
			{% for page in pages %}
		      <tr>
		        <td>{{page.title}}</td>
		        <td>{{page.url}}</td>
				<td>
					<a href="page/details/{{page.id}}" class="btn btn-success">view</a>
					<a href="page/edit/{{page.id}}" class="btn btn-default">edit</a>
					<a href="page/delete/{{page.id}}" class="btn btn-danger">delete</a>
				</td>	        
		      </tr>
		    {% endfor %}
	    </tbody>
	</table>
{% endblock %}